<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Bulls Bookstore</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="icon" type="image/png" href="~/images/fav.png">
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@300;400;700&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <h1 class="logo" style="line-height: normal; display: flex; align-items: center; margin-top: 5px; margin-bottom: 5px;">
            <img src="~/images/usflogo.png" alt="Bulls Bookstore Logo" style="height: 30px; margin-right: 10px;">
            <span style="font-family: 'Barlow Condensed', sans-serif; font-weight: 500;">Bulls Bookstore</span>
        </h1>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                <li><a href="@Url.Action("Books", "Home")">Browse Books</a></li>
                <li><a href="@Url.Action("Trending", "Home")">Trending</a></li>
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; Bulls Bookstore</p>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>